<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-6">Edit Thumbnail</h1>

  <%= form_with(model: @thumbnail, local: true, html: { class: "bg-white p-6 rounded shadow-md" }) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 p-2 w-full border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :uploaded_image, "Upload Image", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :uploaded_image, class: "mt-1 p-2 w-full border rounded-md" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Update Thumbnail", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
